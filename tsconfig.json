  "compilerOptions": {
    "types": ["vite/client"],
    "module": "ESNext",
    "target": "ESNext",
    "jsx": "react-jsx",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    // "lib": ["dom", "dom.iterable", "esnext"],
